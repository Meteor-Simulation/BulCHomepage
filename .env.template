# BulC Homepage Environment Variables Template
# Copy this file to .env and fill in the values.
# WARNING: Never commit the .env file to version control.

# =============================================================================
# Database Configuration
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=bulc_homepage
DB_USER=postgres
DB_PASSWORD=<your_db_password>

# =============================================================================
# JWT Authentication (User Login)
# =============================================================================
JWT_SECRET=<your_jwt_secret_min_32_chars>
JWT_ACCESS_TOKEN_EXPIRY=3600
JWT_REFRESH_TOKEN_EXPIRY=604800

# =============================================================================
# License System RS256 Keys (sessionToken / offlineToken)
# =============================================================================
# Keys are stored as PEM files. Generate with:
#   openssl genpkey -algorithm RSA -out secrets/session_token_private_key.pem -pkeyopt rsa_keygen_bits:2048
#   openssl rsa -pubout -in secrets/session_token_private_key.pem -out secrets/session_token_public_key.pem
#
# - Private key: Used by server to sign tokens (KEEP SECRET)
# - Public key: Embedded in client apps for token verification
#
# Docker/K8s deployment:
#   Mount secrets to /run/secrets/ and update paths:
#   SESSION_TOKEN_PRIVATE_KEY_PATH=/run/secrets/session_token_private_key.pem
#   SESSION_TOKEN_PUBLIC_KEY_PATH=/run/secrets/session_token_public_key.pem

# Path to PKCS#8 Private Key PEM file (for server-side signing)
SESSION_TOKEN_PRIVATE_KEY_PATH=./secrets/session_token_private_key.pem

# Path to Public Key PEM file (for client-side verification)
SESSION_TOKEN_PUBLIC_KEY_PATH=./secrets/session_token_public_key.pem

# =============================================================================
# License Token Settings
# =============================================================================
SESSION_TOKEN_TTL_MINUTES=15
SESSION_TOKEN_ISSUER=bulc-license-server

# Stale session threshold for Auto-Resolve (minutes)
STALE_THRESHOLD_MINUTES=30
